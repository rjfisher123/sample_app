<% provide(:title, 'All users') %>

<h1><%= yield(:title) %></h1>


<div class="input-group" align='col-md-12' >
    <div class="form-inline">
      <%= form_tag users_path, method: :get do %>
	      <%= text_field_tag :query, params[:query], :size => 50, :placeholder=> "Search for a user"%> 
	      <%= button_tag(type: "submit", class: "btn btn-default btn-lrg btn-primary ") do %>
	       Search 
	             <i class="icon-search"></i>
      <% end %>
    <% end %>
    </div>
</div>

<div class='col-md-12'>
  <%= will_paginate @users, renderer: BootstrapPagination::Rails%>


	<ul class="users">
	<% @users.each do |user| %>
		<%= render user %>
	<% end %> 
	</ul>

  <%= will_paginate @users, renderer: BootstrapPagination::Rails%>
</div>


